# Instagram credentials
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=
# Session ID from browser cookie (bypasses login API — recommended)
# Get it: browser → instagram.com → DevTools → Application → Cookies → sessionid
INSTAGRAM_SESSION_ID=

# Gemini (caption generation — free, no credit card)
# Get your key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Content queue
DRAFT_COUNT=3
MIN_READY_QUEUE=5

# Image generation (three providers, Replicate is primary)
#
# Replicate FLUX Kontext — uses Maya's reference photos for face consistency
# Sign up at: https://replicate.com (free runs, no credit card)
REPLICATE_API_TOKEN=
#
# BFL FLUX Kontext — backup reference-based provider
# Get your key at: https://playground.bfl.ai
BFL_API_KEY=
#
# HF FLUX Schnell — text-to-image fallback (last resort)
# Get your token at: https://huggingface.co/settings/tokens
HF_TOKEN=
HF_IMAGE_MODEL=black-forest-labs/FLUX.1-schnell
IMAGE_STEPS=4

# Automation
AUTO_MODE=false
AUTO_PROMOTE_DRAFTS=true
AUTO_PROMOTE_STATUS=approved
AUTO_SCHEDULE_INTERVAL_MINUTES=240
AUTO_SCHEDULE_LEAD_MINUTES=30

# Engagement automation (start conservative, increase after 2 weeks)
ENGAGEMENT_ENABLED=false
ENGAGEMENT_HASHTAGS=indianfashion,mumbaifashion,desistyle,indianfashionblogger,mumbailifestyle
ENGAGEMENT_DAILY_LIKES=100
ENGAGEMENT_DAILY_COMMENTS=30
ENGAGEMENT_DAILY_FOLLOWS=50
ENGAGEMENT_COMMENT_ENABLED=false
ENGAGEMENT_FOLLOW_ENABLED=false
